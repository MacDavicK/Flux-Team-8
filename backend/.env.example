# Application Settings
APP_NAME=Flux Agentic AI
DEBUG=True
LOG_LEVEL=INFO

# Calendar Settings
DEFAULT_WORK_START_HOUR=9
DEFAULT_WORK_END_HOUR=18
DEFAULT_TASK_DURATION_MINUTES=30

# Notification Settings
NOTIFICATION_CHECK_INTERVAL_MINUTES=15
MISSED_TASK_RESCHEDULE_DAYS=1
