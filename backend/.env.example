# ============================================================
# Flux Backend — Environment Variables
#
# SETUP:
#   1. Copy this file:  cp .env.example .env
#   2. Fill in your real keys below (marked with "your-*")
#   3. Never commit .env — it's in .gitignore
#
# Get your OpenAI key at: https://platform.openai.com/api-keys
# Get Supabase key by running: npx supabase status
# ============================================================

# === Database ===
DATABASE_URL=postgresql://user:password@localhost:5432/flux
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_KEY=your-service-role-key-from-supabase-status

# === AI / LLM ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPEN_ROUTER_API_KEY=your-key-here
PINECONE_API_KEY=your-key-here

# === App Settings ===
APP_NAME=Flux Agentic AI
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
SECRET_KEY=change-this-to-a-random-string
JWT_EXPIRY=3600

# === Scheduler / Notification Defaults ===
DEFAULT_WORK_START_HOUR=9
DEFAULT_WORK_END_HOUR=18
DEFAULT_TASK_DURATION_MINUTES=30
NOTIFICATION_CHECK_INTERVAL_MINUTES=15
MISSED_TASK_RESCHEDULE_DAYS=1
