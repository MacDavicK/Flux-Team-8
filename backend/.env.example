# ============================================================
# Flux Backend — Environment Variables
#
# SETUP:
#   1. Copy this file:  cp .env.example .env
#   2. Fill in your real keys below (marked with "your-*")
#   3. Never commit .env — it's in .gitignore
#
# Get your OpenRouter key at: https://openrouter.ai/keys (used for chat + embeddings)
# Get Supabase key by running: npx supabase status
# ============================================================

# === Database ===
DATABASE_URL=postgresql://user:password@localhost:5432/flux
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_KEY=your-publishable-key-from-supabase-status
# Service role key (bypasses RLS); required for syncing auth users to public.users. From: supabase status → Secret
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-from-supabase-status

# === AI / LLM (OpenRouter) ===
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o-mini
PINECONE_API_KEY=your-key-here

# === App Settings ===
APP_NAME=Flux Agentic AI
DEBUG=True
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]
SECRET_KEY=change-this-to-a-random-string
JWT_EXPIRY=3600

# === Scheduler / Notification Defaults ===
DEFAULT_WORK_START_HOUR=9
DEFAULT_WORK_END_HOUR=18
DEFAULT_TASK_DURATION_MINUTES=30
NOTIFICATION_CHECK_INTERVAL_MINUTES=15
MISSED_TASK_RESCHEDULE_DAYS=1
